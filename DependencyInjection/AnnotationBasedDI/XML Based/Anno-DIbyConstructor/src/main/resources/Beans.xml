<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="address" class="com.wolters.Anno_DIbyConstructor.pojos.Address">
        <property name="city" value="Mumbai"> </property>
        <property name="country" value="India"> </property>
    </bean>

    <bean name="emp1" class="com.wolters.Anno_DIbyConstructor.pojos.Employee" autowire="constructor">
        <constructor-arg name="name" value="Ratnakar"> </constructor-arg>
    </bean>

</beans>
